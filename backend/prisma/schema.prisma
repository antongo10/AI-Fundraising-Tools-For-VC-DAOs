generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OWNER
  INVESTOR
}

enum Network {
  ETHEREUM
  SOLANA
}

enum TokenType {
  ERC20
  ERC721
  NFT
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  walletAddress String?  @db.VarChar(128)
  role          Role     @default(INVESTOR)
  createdAt     DateTime @default(now())

  transactions  Transaction[]
}

model Campaign {
  id        String    @id @default(cuid())
  name      String
  network   Network
  tokenType TokenType
  createdAt DateTime  @default(now())

  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  campaignId  String
  amountUsd   Decimal  @db.Decimal(20, 2)
  chainTxId   String?  @db.VarChar(128)
  createdAt   DateTime @default(now())
}